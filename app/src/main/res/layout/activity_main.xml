<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background"
        >

        <TextView
            android:id="@+id/tx_calculate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:id="@+id/btn_layer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tx_calculate">

            <TextView
                android:id="@+id/btn_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="C"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_bracket"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="()"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_mod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="%"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_div"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="รท"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_layer1">

            <TextView
                android:id="@+id/btn_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="7"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="8"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_mul"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_layer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_layer2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/btn_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="4"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="5"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="6"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_min"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_layer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_layer3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/btn_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="2"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_layer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_layer4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/btn_change"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+/-"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_floor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="."
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn_cal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="="
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>